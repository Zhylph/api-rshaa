# Production Environment Configuration for RSAZ Medical API
# Copy this file to .env on production server

APP_NAME="RSAZ Medical API"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://api.yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
LOG_STDERR_FORMATTER=Monolog\Formatter\JsonFormatter

# Database Configuration - RSAZ Remote Database
DB_CONNECTION=mysql
DB_HOST=192.168.0.3
DB_PORT=3939
DB_DATABASE=rsaz_sik
DB_USERNAME=herd
DB_PASSWORD=HewlettPackard11@@

# Alternative: Local Database Setup
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=rsaz_api_production
# DB_USERNAME=rsaz_user
# DB_PASSWORD=your_secure_password_here

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=file
CACHE_PREFIX=rsaz_api

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# API Token Settings - GENERATE SECURE TOKEN WITH: php artisan generate:api-token
API_TOKEN_SECRET=GENERATE_SECURE_64_CHAR_RANDOM_STRING_HERE

# Security Settings
SANCTUM_STATEFUL_DOMAINS=api.yourdomain.com,yourdomain.com
SPA_URL=https://yourdomain.com

# Performance Settings
OCTANE_SERVER=swoole
SCOUT_QUEUE=true

# Monitoring & Analytics (Optional)
SENTRY_LARAVEL_DSN=
BUGSNAG_API_KEY=

# Backup Settings (if using spatie/laravel-backup)
BACKUP_DISK=local
BACKUP_NOTIFICATION_MAIL_TO=admin@yourdomain.com

# Rate Limiting
THROTTLE_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT=100
